<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.DepartmentRepository">

    <select id="getDepartments" resultType="com.example.demo.dto.DepartmentDto">
        SELECT id_dep as idDepartment,
               Nombre as department
        FROM Departamento
        WHERE id_dep != 1
    </select>
</mapper>